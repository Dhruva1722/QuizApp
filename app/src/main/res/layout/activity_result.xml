<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#f5f5f5"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/result_animation_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/result_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="16dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/result_message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textSize="24sp"
            android:textColor="#000000"
            android:paddingBottom="16dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Score: "
            android:textSize="24sp"
            android:textColor="#000000"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/correct_answers_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correct Answers:"
            android:textSize="18sp"
            android:textColor="#4CAF50"
            android:padding="8dp"
            android:background="#E8F5E9"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/wrong_answers_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wrong Answers:"
            android:textSize="18sp"
            android:textColor="#F44336"
            android:padding="8dp"
            android:background="#FFEBEE"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/answers_with_questions_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answers with Questions:"
            android:textSize="18sp"
            android:textColor="#000000"
            android:padding="8dp"
            android:background="#E0E0E0"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/restart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart Quiz"
            android:layout_gravity="center"
            android:padding="12dp"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
